{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "allowJs": false,
    "outDir": "./build",                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude":[
    "./node_modules"
  ]
}